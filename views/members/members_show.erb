<h2><%= @member.name %></h2>

<p> Age: <%=@member.age%> </p>
<p> Ability: <%=@member.ability%> </p>
<p> avalanche_trained: <%=@member.avalanche_trained%> </p>

<form action="/members/<%= @member.id %>/edit" method="GET">
  <input type="submit" value="Edit">
</form>

<form action="/members/<%= @member.id %>/delete" method="POST">
  <input type="submit" value="Delete">
</form>

<p>All tours by <%= @member.name %>:</p>

<%for tour in @tours%>
<p><%=tour.id%></p>

<%end%>
