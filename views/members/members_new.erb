<h1> Add new members </h1>

<form method="POST" action="/members">

  <ul class="flex-outer">
    <li>
      <label for="name">Full Name:</label>
      <input type="text" name="name" id="name"/>
    </li>
    <li>
      <label for="age">Age:</label>
      <input type="number" name="age" id="age"/>
    </li>
    <li>
      <label for="ability">Ability (Lowest: 1, Highest: 5):</label>
      <input type="number" name="ability" id="ability" min="1", max="5"/>
    </li>
    <li>
      <label for="avalanche_trained">Has this member completed avalanche training?</label>
    </li>
    <li>
      <input type="radio" id="avalanche_trained" name="avalanche_trained" value="false" checked> No
    </li>
    <li>
      <input type="radio" id="avalanche_trained" name="avalanche_trained" value="true"> Yes
    </li>
    <li>
      <button type="submit">Add Member</button>
    </li>
  </ul>

</form>
